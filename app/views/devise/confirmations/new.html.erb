<div class="col-md-9">

	<div class="panel panel-default">

	  <div class="panel-body">

			<h3>Resend confirmation instructions</h3>
			<hr>

			<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }, html: { role: "form"}) do |f| %>
				
				<%= devise_error_messages! %>

				<div class="form-horizontal">
					<div class="form-group">
				  	<%= f.label :email, class: "col-sm-4 control-label required" %>
				  	<div class="col-sm-8">
				 			<%= f.email_field :email, placeholder: "Email", :autofocus => true, class: "form-control"  %>
				 		</div>
				 	</div>

				  <div class="form-group">
				    <div class="col-sm-offset-4 col-sm-8">
				    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
 								<span class='glyphicon glyphicon-ok'></span>&nbsp;&nbsp;Resend confirmation instructions
						<% end %>			  
				  		<!--<%= f.submit "Resend confirmation instructions", class: "btn btn-primary" %>-->
				  	</div>
				  </div>

			  </div>

			<% end %>

			<hr>
			<%= link_to "javascript:history.back()" do %>
				<span class="glyphicon glyphicon-chevron-left"></span>&nbsp;Back
			<% end %>

		</div>

	</div>
		
</div>

<div class="col-md-3">
	<%= render "devise/shared/links" %>
</div>


