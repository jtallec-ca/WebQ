<div class="col-md-9">

  <div class="panel panel-default">

    <div class="panel-body">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
      <hr>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        
        <%= devise_error_messages! %>
        
        <h3 class="col-sm-offset-1"><small>Email</small></h3>
        
        <div class="form-horizontal">
          <div class="form-group">
            <%= f.label :email, class: "col-sm-4 control-label"  %>
            <div class="col-sm-8">
              <%= f.email_field :email, placeholder: "Email", :autofocus => true, class: "form-control" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <br>

          <h3 class="col-sm-offset-1"><small>Password</small></h3>
          
          <div class="form-group">
            <%= f.label :password, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.password_field :password, placeholder: "New Password", :autocomplete => "off", class: "form-control" %>
              <span class="help-block"><small><i>(leave blank if you don't want to change it)</i></small></span>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.password_field :password_confirmation, placeholder: "New Password", class: "form-control" %>
              <span class="help-block"><small><i>(leave blank if you don't want to change it)</i></small></span>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :current_password, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.password_field :current_password, placeholder: "Current Password", class: "form-control" %>
              <span class="help-block"><small><i>(we need your current password to confirm your changes)</i></small></span>
            </div>
          </div>

          <br>

          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                <span class='glyphicon glyphicon-ok'></span>&nbsp;&nbsp;Update
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!--<hr>

      <%= link_to "Back", :back %>-->

      <hr>

      <%= link_to "javascript:history.back()" do %>
        <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;Back
      <% end %>

    </div> 
  </div>
</div>

<div class="col-md-3">
  <%= render "devise/shared/links" %>
  <!--<%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete%>-->
</div>